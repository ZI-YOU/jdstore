<h1>Edit Product</h1>
<%= simple_form_for [:admin,@product] do |f| %>
	<div class="group">
		<%= f.input :title, :label => "商品名称" %>
	</div>
	<div class="group">
		<%= f.input :description, :label => "商品描述" %>
	</div>
	<div class="group">
		<%= f.input :quantity, :label => "库存" %>
	</div>
	<div class="group">
		<%= f.input :price, :label => "价格" %>
	</div>
	 
	 <% if @product.image.present? %>
	   <span>目前商品图</span> <br>
	   <%= image_tag(@product.image.thumb.url) %>
	 <% end %>

	 <div class="group">
	   <%= f.input :image, as: :file %>
	 
	 </div>
	<div class="group">
		<%= f.submit "Submit", date: { disable_with: "Submiting..." } %>
	</div>
<% end %>