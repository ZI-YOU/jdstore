<h2>New Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>
	<div class="group"> <%= f.input :title,:label => "商品名称" %> </div>
	<div class="group"> <%= f.input :description, :label => "商品描述" %> </div>
	<div class="group"> <%= f.input :quantity, :label => "库存" %> </div>
	<div class="group"> <%= f.input :price, :label => "价格" %> </div>
	<div class="group"> <%= f.submit "Submit", data: {disable_with: "Submitting..."} %> </div>
<% end %>